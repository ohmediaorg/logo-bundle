{% extends '@OHMediaBackend/base.html.twig' %}

{% block meta_title %}{{ form_title }}{% endblock %}

{% macro logo(logo) %}
  <a
    href="#" data-logo="{{ logo.id }}"
    data-logo-name="{{ logo.name|e('html_attr') }}"
  >
    {{ image_tag(logo.image, {
      height: 50,
      style: 'height: 50px',
    }) }}
  </a>
{% endmacro %}

{% set has_logos = form.logos is defined %}

{% block main %}
  <div class="card">
    <div class="card-body">
      <h1 class="card-title">{{ form_title }}</h1>

      {{ form_start(form) }}
      {{ form_row(form.title) }}

      {% if has_logos %}
        <fieldset class="mb-3">
          {{ form_label(form.logos) }}

          <div>
            <small class="d-block mb-3">Click a logo to select/unselect. Logos will be displayed in a random order on the website.</small>

            {{ form_widget(form.logos, {
              attr: {
                style: 'display:none',
              }
            }) }}

            <div class="row">
              <div class="col-6">
                <div id="logos_selected_label">
                  {{ bootstrap_icon('patch-check') }}
                  Selected
                </div>
              </div>
              <div class="col-6">
                <div id="logos_unselected_label">
                  {{ bootstrap_icon('patch-minus') }}
                  Unselected
                </div>
              </div>
              <div class="col-6">
                <div class="bg-success-subtle h-100">
                  <div class="d-flex flex-wrap gap-2 p-2" id="logos_selected" aria-labelledby="logos_selected_label">
                    {% for logo in logo_group.logos %}
                      {{ _self.logo(logo) }}
                    {% endfor %}
                  </div>
                </div>
              </div>
              <div class="col-6">
                <div class="bg-warning-subtle h-100">
                  <div class="d-flex flex-wrap gap-2 p-2" id="logos_unselected" aria-labelledby="logos_unselected_label">
                    {% for logo in logos_unselected %}
                      {{ _self.logo(logo) }}
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </fieldset>
      {% else %}
        <fieldset class="mb-3">
          <legend class="col-form-label">Logos</legend>

          <div>
            <small class="d-block mb-3">There aren't any logos yet.</small>
          </div>
        </fieldset>
      {% endif %}

      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  {% if has_logos %}
    <script>
    document.addEventListener('DOMContentLoaded', function() {
      const containerSelected = document.getElementById('logos_selected');
      const containerUnselected = document.getElementById('logos_unselected');

      const logos = document.querySelectorAll('[data-logo]');

      function setLogoAttributes(logo, selected) {
        let label = '';

        if (selected) {
          label = 'Unselect ' + logo.dataset.logoName;
        } else {
          label = 'Select ' + logo.dataset.logoName;
        }

        logo.setAttribute('aria-label', label);
        logo.title = label;
      }

      logos.forEach(function(logo) {
        const input = document.getElementById('{{ form.logos.vars.id }}_' + logo.dataset.logo);

        function handleLogoSelect() {
          if (input.checked) {
            containerSelected.append(logo);
          } else {
            containerUnselected.append(logo);
          }

          setLogoAttributes(logo, input.checked);
        }

        logo.addEventListener('click', (e) => {
          e.preventDefault();

          input.checked = !input.checked;

          handleLogoSelect();
        });

        input.addEventListener('change', () => {
          handleLogoSelect();
        });

        setLogoAttributes(logo, logo.parentNode === containerSelected);
      });
    });
    </script>
  {% endif %}
{% endblock %}
