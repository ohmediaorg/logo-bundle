{% extends '@OHMediaBackend/base.html.twig' %}

{% block meta_title %}Groups{% endblock %}

{% block breadcrumbs %}
  {{ bootstrap_breadcrumbs(
    bootstrap_breadcrumb(bootstrap_icon('patch-check') ~ ' Logos', 'logo_index'),
    bootstrap_breadcrumb('Groups', 'logo_group_index'),
  ) }}
{% endblock %}

{% set can_create_logo_group = is_granted(attributes.create, new_logo_group) %}

{% set create_logo_group_href = path('logo_group_create') %}

{% block actions %}
  {% if can_create_logo_group %}
    <a href="{{ create_logo_group_href }}" class="btn btn-primary">
      {{ bootstrap_icon('plus-lg') }}
      Add Group
    </a>
  {% endif %}
{% endblock %}

{% block main %}
  {% set logo_group_count = pagination.count %}

  <div class="card">
    <div class="card-body">
      <div class="card-title card-title-with-count">
        <h1 class="card-title-heading">Groups</h1>
        <div class="card-title-count">
          {{ bootstrap_badge_primary(logo_group_count) }}
        </div>
      </div>

      {{ form_start(search_form) }}
        <div class="row align-items-end">
          <div class="col-lg-6 col-sm-12">
            {{ form_row(search_form.search) }}
          </div>
          <div class="col-lg-12 col-sm-12">
            <button class="btn btn-outline-dark mb-3" type="submit">Search</button>
            <a class="btn btn-secondary mb-3" href="{{ path('logo_group_index') }}">Reset</a>
          </div>
        </div>
      {{ form_end(search_form) }}

      {% if logo_group_count %}
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Title</th>
              <th>Logos</th>
              <th>Shortcodes</th>
              <th>Last Updated</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {% for logo_group in pagination.results %}
              {{ _self.table_row(logo_group, attributes) }}
            {% endfor %}
          </tbody>
        </table>

        {{ bootstrap_pagination(pagination) }}

        <small>{{ bootstrap_pagination_info(pagination) }}</small>
      {% else %}
        <p>
          No groups found.
          {% if can_create_logo_group %}
            <a href="{{ create_logo_group_href }}">Click here to add a group.</a>
          {% endif %}
        </p>
      {% endif %}
    </div>
  </div>
{% endblock %}

{% macro table_row(logo_group, attributes) %}
  {% set row_actions = [] %}

  {% if is_granted(attributes.edit, logo_group) %}
    {% set row_actions = row_actions|merge([{
      route: 'logo_group_edit',
      route_params: {id: logo_group.id},
      color: 'secondary',
      icon: 'pen',
      text: 'Edit Group',
    }]) %}
  {% endif %}

  {% if is_granted(attributes.delete, logo_group) %}
    {% set row_actions = row_actions|merge([{
      route: 'logo_group_delete',
      route_params: {id: logo_group.id},
      color: 'danger',
      icon: 'trash',
      text: 'Delete Group',
      confirm: 'Are you sure you want to delete this group? Clicking OK will take you to a verification step to delete this entry.',
    }]) %}
  {% endif %}

  <tr>
    <td>{{ logo_group }}</td>
    <td>{{ logo_group.logos|length }}</td>
    <td>
      {{ shortcode('logos(' ~ logo_group.id ~ ')') }}
    </td>
    <td>{{ logo_group.updatedAt|datetime }}</td>
    <td>
      {% include '@OHMediaBackend/widget/row_actions.html.twig' with {
        row_actions: row_actions,
      } only %}
    </td>
  </tr>
{% endmacro %}
